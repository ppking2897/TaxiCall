<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.biancaen.texicall">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".BeginningActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".PassengerActivity" />
        <activity android:name=".Passenger_Sign_in_Activity" />
        <activity android:name=".Passenger_Sign_Up_Activity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity
            android:name=".Passenger_Menu_Activity"
            android:label="@string/title_activity_passenger__menu_"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Passenger_Info_Activity"
            android:label="@string/title_activity_passenger__info_"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Passenger_Edit_Mail_Activity"
            android:label="@string/title_activity_passenger__edit_mail"
            android:parentActivityName=".Passenger_Info_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Passenger_Edit_Password_Activity"
            android:label="@string/title_activity_passenger__edit_password"
            android:parentActivityName=".Passenger_Info_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Passenger_Edit_Username_Activity"
            android:label="@string/title_activity_passenger__edit_username"
            android:parentActivityName=".Passenger_Info_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Passenger_Customer_Activity"
            android:label="@string/title_activity_passenger__customer"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".Passenger_Sent_Car_Activity"></activity>
    </application>

</manifest>