<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515E71"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_driver_passenger_request"
    tools:context=".Driver.Driver_Passenger_Request.Driver_Passenger_Request_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_depart_to_arrive"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上車地點 (所在地)"
                    android:textColor="@color/colorWhite"
                    />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="4dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="17dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:background="@drawable/shape_address"
                    android:text="no data"
                    android:textSize="16sp"
                    android:textColor="#364F6B"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下車地點 (目的地)"
                    android:textColor="@color/colorWhite"
                    />
                <TextView
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="4dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="17dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:background="@drawable/shape_address"
                    android:text="no data"
                    android:textSize="16sp"
                    android:textColor="#364F6B"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="#F5F4F6"
            />
        <LinearLayout
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="130dp"
                >

                <ImageView
                    android:id="@+id/numberOfPassenger"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_the_number_of_passengers"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乘車人數"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@+id/numberOfPassenger"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/passenger_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="64sp"
                android:textColor="#FFB400"
                android:text="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:text="人"
                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#F5F4F6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_Remarks"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_remarks_column"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="備註"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@+id/imageView_Remarks"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="44dp"
                android:paddingLeft="13dp"
                android:paddingRight="17dp"
                android:paddingTop="11dp"
                android:paddingBottom="10dp"
                android:background="@drawable/shape_address"
                android:hint="沒有需求"
                android:textColorHint="#364F6B"
                android:textSize="16sp"
                android:textColor="#364F6B"
                />

        </LinearLayout>





    </LinearLayout>
</ScrollView>