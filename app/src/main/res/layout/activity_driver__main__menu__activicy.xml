<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_sign_in_flow"
    >
    <ImageView
        android:layout_width="118dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="13dp"
        android:src="@drawable/img_logo_homescreen"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="23dp"
        android:text="Driver"
        android:textColor="@color/colorWhite"
        android:textSize="24dp"
        />
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/shape_online_driver"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="91dp"
            android:src="@drawable/ic_car_online_btn_homesreen"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="上線載客"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/driver_travel_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_circle"
            android:orientation="vertical"
            android:onClick="driver_travel_record"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="45.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10.3dp"
                android:src="@drawable/ic_tourlist_homescreen"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="行程紀錄"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pointRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_circle"
            android:orientation="vertical"
            android:onClick="diver_point_record"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="45.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10.3dp"
                android:src="@drawable/ic_pointslist_homescreen"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="點數紀錄"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/driver_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_circle"
            android:orientation="vertical"
            android:onClick="dirver_info"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="45.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10.3dp"
                android:src="@drawable/ic_account_information_homescree"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="帳號資訊"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/driver_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_circle"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="45.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10.3dp"
                android:src="@drawable/ic_logout_homescreen"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登出"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
