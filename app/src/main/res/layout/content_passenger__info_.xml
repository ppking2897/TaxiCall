<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shpe_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.biancaen.texicall.Passenger_Info_Activity"
    tools:showIn="@layout/app_bar_passenger__info_"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32dp"
        android:background="#F5F4F6"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手機號碼 / XXXXXXXXXX"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textColorHint="#FFFFFF"
        android:drawableStart="@drawable/ic_id_cellphone_settingflow"
        android:drawablePadding="17dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/transparent"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32dp"
        android:background="#F5F4F6"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用戶名稱 / XXXXXX"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textColorHint="#FFFFFF"
            android:drawableStart="@drawable/ic_username_settingflow"
            android:drawablePadding="17dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:background="@android:color/transparent"
            android:layout_weight="10"
            />

        <ImageButton
            android:id="@+id/imageButton_username_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/btn_edit_username_settingflow"
            android:onClick="passenger_edit_username"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32dp"
        android:background="#F5F4F6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密碼 / XXXXXXXXXX"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textColorHint="#FFFFFF"
            android:drawableStart="@drawable/ic_password_settingflow"
            android:drawablePadding="17dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:background="@android:color/transparent"
            android:layout_weight="10"
            />

        <ImageButton
            android:id="@+id/imageButton_password_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/btn_edit_password_settingflow"
            android:onClick="passenger_edit_password"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32dp"
        android:background="#F5F4F6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="信箱 / XXXXXXXXXXXXXX"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textColorHint="#FFFFFF"
            android:drawableStart="@drawable/ic_mail_settingflow"
            android:drawablePadding="17dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="2dp"
            android:paddingTop="5dp"
            android:background="@android:color/transparent"
            android:layout_weight="10"
            />

        <ImageButton
            android:id="@+id/imageButton_mail_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/btn_edit_mail_settingflow"
            android:onClick="passenger_edit_mail"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:background="#F5F4F6"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/btn_logout_settingpage"
        android:background="?android:selectableItemBackground"
        />
</LinearLayout>
