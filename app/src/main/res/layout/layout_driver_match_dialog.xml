<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_driver_matched_dialog_background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#364F6B"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/textViewDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新載客通知"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="你有    1    筆新載客通知"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/closeDialog"
            android:layout_width="50dp"
            android:layout_height="40dp"

            android:layout_alignParentEnd="true"
            android:src="@drawable/btn_exit_deadhead_notice"
            android:background="?android:selectableItemBackground"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在 :  "
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="11dp"
            />
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_driver_matched_addres_background"
            >
            <TextView
                android:id="@+id/driverMatchArriveAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:textColor="#364F6B"
                android:textSize="18sp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="24dp"
            android:background="#C0BDC0"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/refuse"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_driver_matched_button"
            android:text="拒絕"
            android:textColor="#364F6B"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/accept"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_driver_matched_button"
            android:text="接受"
            android:textColor="#364F6B"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>

</LinearLayout>