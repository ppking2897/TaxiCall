<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_over_time_dialog_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:background="@color/topToolBarColor"
        >
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="63dp"
            android:src="@drawable/ic_request_was_canceled"
            android:id="@+id/close_Over_Time_Dialog"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="派車已取消通知"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:text="由於您已逾 10 分鐘未出現在上車地點，"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司機已取消此筆派車紀錄。"
            android:textColor="#F05C87"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="25dp"
        android:background="#C0BDC0"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:text="您將會新增一筆空趟紀錄"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:text="於下次搭乘時需多支付一筆空趟費用。"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
        android:text="*若仍需搭乘請重新填寫訂單。"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/reCallCar"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/btn_request_car_again"
            />
        <ImageView
            android:id="@+id/noThanks"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_no_thanks"
            />
    </LinearLayout>
</LinearLayout>