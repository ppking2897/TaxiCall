<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_passenger__car_service_"
    tools:context=".Passenger.Passenger_Car_Service.Passenger_Car_Service_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#173540"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空趟紀錄次數 : "
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/null_Empty_Trip_Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#BD9E41"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ， 本趟車資需加收 "
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/null_Empty_Trip_ToPay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#BD9E41"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 元。 "
                android:textSize="14sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_depart_to_arrive_passenger"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上車地點 (所在地)"
                        android:textColor="@color/colorWhite"
                        />
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/onClickRadio"
                        android:layout_gravity="center"
                        >
                        <RadioButton
                            android:id="@+id/radioButton01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:text="輸入地址"
                            android:textSize="12sp"
                            android:button="@null"
                            android:drawableStart="@drawable/selector_radio_button"
                            android:drawablePadding="5dp"
                            />
                        <RadioButton
                            android:id="@+id/radioButton02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="使用常用地址"
                            android:textSize="12sp"
                            android:button="@null"
                            android:drawableStart="@drawable/selector_radio_button"
                            android:drawablePadding="5dp"
                            />

                    </RadioGroup>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fragment01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                </FrameLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下車地點 (目的地)"
                        android:textColor="@color/colorWhite"
                        />
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/onClickRadio02"
                        android:layout_gravity="center"
                        >
                        <RadioButton
                            android:id="@+id/radioButton03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:text="輸入地址"
                            android:textSize="12sp"
                            android:button="@null"
                            android:drawableStart="@drawable/selector_radio_button"
                            android:drawablePadding="5dp"
                            />
                        <RadioButton
                            android:id="@+id/radioButton04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:text="使用常用地址"
                            android:textSize="12sp"
                            android:button="@null"
                            android:drawableStart="@drawable/selector_radio_button"
                            android:drawablePadding="5dp"
                            />

                    </RadioGroup>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/fragment02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="#F5F4F6"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/numberOfPassenger"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_the_number_of_passengers_passenger"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乘車人數"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@+id/numberOfPassenger"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/btn_reduce"
                    android:onClick="btn_reduce"
                    />
                <TextView
                    android:id="@+id/passenger_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="64sp"
                    android:textColor="#3FC1C9"
                    android:text="1"
                    />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/btn_plus"
                    android:onClick="btn_plus"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#F5F4F6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_Remarks"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/ic_remarks_column_passenger"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="備註"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@+id/imageView_Remarks"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/textView_Comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="44dp"
                android:paddingLeft="13dp"
                android:paddingRight="17dp"
                android:paddingTop="11dp"
                android:paddingBottom="10dp"
                android:background="@drawable/shape_address"
                android:hint="請輸入您的特殊需求"
                android:textColorHint="#364F6B"
                android:textSize="16sp"
                android:textColor="#364F6B"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#F5F4F6"
            />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:onClick="rates"
            android:src="@drawable/btn_estimated_fare"
            />



    </LinearLayout>
</ScrollView>